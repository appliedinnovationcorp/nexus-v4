# ==============================================
# NEXUS FRONTEND ENVIRONMENT CONFIGURATION
# ==============================================
# Copy this file to .env.local and fill in your values
# Required variables are marked with [REQUIRED]

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
NODE_ENV=development

# Application Metadata
NEXT_PUBLIC_APP_NAME=Nexus Workspace
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ==============================================
# API CONFIGURATION [REQUIRED]
# ==============================================
# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# ==============================================
# ERROR TRACKING (Sentry) - Optional
# ==============================================
# Client-side Sentry configuration (exposed to browser)
# Get from: https://sentry.io/settings/[org]/projects/[project]/keys/
# NEXT_PUBLIC_SENTRY_DSN=https://your-frontend-dsn@sentry.io/project-id
# NEXT_PUBLIC_SENTRY_RELEASE=1.0.0
# NEXT_PUBLIC_SENTRY_DEBUG=false

# Server-side Sentry configuration (build-time only)
# SENTRY_DSN=https://your-frontend-dsn@sentry.io/project-id
# SENTRY_ORG=your-org
# SENTRY_PROJECT=nexus-frontend
# SENTRY_AUTH_TOKEN=your-auth-token
# SENTRY_RELEASE=1.0.0

# ==============================================
# FEATURE FLAGS
# ==============================================
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true

# ==============================================
# EXTERNAL SERVICES (Optional)
# ==============================================
# Stripe (client-side)
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key

# Google Analytics
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Google Maps
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ==============================================
# AUTHENTICATION (NextAuth) - Server-side only
# ==============================================
# Generate with: openssl rand -base64 64
# NEXTAUTH_SECRET=your-nextauth-secret-at-least-64-characters-long
# NEXTAUTH_URL=http://localhost:3000

# OAuth Secrets (server-side only)
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GITHUB_CLIENT_SECRET=your-github-client-secret

# ==============================================
# THIRD-PARTY API KEYS (Server-side only)
# ==============================================
# Stripe (server-side)
# STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
# STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# SendGrid
# SENDGRID_API_KEY=your-sendgrid-api-key

# ==============================================
# DATABASE (Optional - for server-side operations)
# ==============================================
# DATABASE_URL=postgresql://username:password@localhost:5432/nexus_db

# ==============================================
# INTERNAL CONFIGURATION
# ==============================================
# Internal API secret for server-to-server communication
# INTERNAL_API_SECRET=your-internal-api-secret

# Monitoring
ENABLE_MONITORING=true

# ==============================================
# DEVELOPMENT CONFIGURATION
# ==============================================
# Custom development variables
CUSTOM_KEY=your-custom-value
