# =============================================================================
# Nexus Workspace - Development Environment
# =============================================================================

# Environment
NODE_ENV=development
ENVIRONMENT=development

# =============================================================================
# Application URLs
# =============================================================================
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001
API_URL=http://localhost:3001/api

# Next.js Public Variables
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_ENVIRONMENT=development

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL
DATABASE_URL=postgresql://nexus_user:nexus_password@localhost:5432/nexus_dev
POSTGRES_DB=nexus_dev
POSTGRES_USER=nexus_user
POSTGRES_PASSWORD=nexus_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# MongoDB
MONGODB_URL=mongodb://admin:admin_password@localhost:27017/nexus_nosql?authSource=admin
MONGO_DB=nexus_nosql
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=admin_password
MONGO_HOST=localhost
MONGO_PORT=27017

# Redis
REDIS_URL=redis://:redis_password@localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# =============================================================================
# Authentication & Security
# =============================================================================
JWT_SECRET=dev-jwt-secret-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

SESSION_SECRET=dev-session-secret-change-in-production
COOKIE_SECRET=dev-cookie-secret-change-in-production

# OAuth Secrets (Development)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# =============================================================================
# Third-Party Integrations
# =============================================================================
# AWS (Development)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=nexus-dev-bucket

# QuickBooks
QB_CONSUMER_KEY=your-qb-consumer-key
QB_CONSUMER_SECRET=your-qb-consumer-secret
QB_SANDBOX=true

# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@nexus.local

# Slack
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret

# =============================================================================
# Monitoring & Observability
# =============================================================================
# Sentry
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# DataDog
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key

# New Relic
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key
NEW_RELIC_APP_NAME=nexus-dev

# =============================================================================
# Feature Flags
# =============================================================================
UNLEASH_URL=http://localhost:4242
UNLEASH_CLIENT_KEY=your-unleash-client-key
LAUNCHDARKLY_SDK_KEY=your-launchdarkly-sdk-key

# =============================================================================
# Development Tools
# =============================================================================
# Logging
LOG_LEVEL=debug
LOG_SQL_QUERIES=true
LOG_MONGO_QUERIES=true
LOG_REDIS_COMMANDS=false

# Debug
DEBUG=nexus:*

# Hot Reload
CHOKIDAR_USEPOLLING=true

# =============================================================================
# AI & ML Services
# =============================================================================
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
HUGGING_FACE_API_KEY=your-huggingface-api-key

# =============================================================================
# Business Intelligence
# =============================================================================
MIXPANEL_TOKEN=your-mixpanel-token
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
HOTJAR_ID=your-hotjar-id

# =============================================================================
# Development Database Tools
# =============================================================================
PGADMIN_EMAIL=admin@nexus.local
PGADMIN_PASSWORD=admin_password
PGADMIN_PORT=5050

MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASSWORD=admin_password
MONGO_EXPRESS_PORT=8081

REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin_password
REDIS_COMMANDER_PORT=8082
