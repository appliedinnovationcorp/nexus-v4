{
  "name": "nexus-workspace-v4",
  "version": "1.0.0",
  "description": "Nexus workspace with comprehensive pnpm workspace structure",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,yaml,yml}\"",
    "dev": "turbo dev",
    "clean": "turbo clean",
    "type-check": "turbo type-check",
    "install:all": "pnpm install",
    "update:all": "pnpm -r update"
  },
  "keywords": [
    "workspace",
    "monorepo",
    "pnpm"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.11.1",
  "devDependencies": {
    "eslint": "^9.30.0",
    "prettier": "^3.4.2",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
